<?xml version="1.0" encoding="UTF-8"?>
<project name="asdoc" default="create asdoc">
	<property name="SDK_PATH"
		value="/Users/bright/Downloads/install/adobe/flex_sdk_4.6" />
	<target name="create asdoc">
		<delete includeemptydirs="true">
			<fileset dir="${basedir}/asdoc" includes="**/*" />
		</delete>
		<exec executable="${SDK_PATH}/bin/asdoc">
			<arg
				line="	-doc-sources '${basedir}/src' 
		    		-output '${basedir}/asdoc' 
		    		-main-title 'Gear API' 
		    		-window-title 'Gear API'" />
		</exec>
	</target>
	<target name="gear swc">
		<fdt.loadProjectProperties projectname="gear" />
		<fdt.launch.library projectname="${FDTProject}"
			compilerarguments=" -target-player=${FDTProjectPlayerVersion}"
			target="${FDTProjectPath}/bin/gear.swc" />
	</target>
</project>
